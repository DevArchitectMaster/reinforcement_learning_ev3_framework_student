{
  "version": 1,
  "disable_existing_loggers": "True",
  "filters": {

  },
  "formatters": {
      "standard": {
          "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
      },
      "simple": {
          "format": "%(asctime)s - %(message)s",
          "datefmt": "%Y-%m-%d %H:%M:%S"
      },
      "detailed": {
          "format": "%(asctime)s - %(pathname):%(lineno) - %(message)s"
      },
      "logformat_simple": {
          "format": "\n\t%(asctime)s - %(name)s || %(filename)s:%(funcName)s [%(lineno)d]\t%(levelname)s : %(message)s\t\n",
          "datefmt": "%Y-%m-%d %H:%M:%S"
      },
      "logformat_detailed": {
        "format": "\n\t%(asctime)s - %(name)s || %(pathname)s:%(filename)s:%(funcName)s [%(lineno)d]\t%(levelname)s : %(message)s\t\n",
        "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
      "default": {
          "class": "logging.StreamHandler",
          "level": "INFO",
          "filters": [],
          "formatter": "standard",
          "stream": "ext://sys.stdout"
      },
      "stderr": {
          "class": "logging.StreamHandler",
          "level": "WARNING",
          "filters": [],
          "formatter": "simple",
          "stream": "ext://sys.stderr"
      },
      "console": {
          "class": "logging.StreamHandler",
          "level": "INFO",
          "filters": [],
          "formatter": "logformat_simple"
      },
      "file": {
          "class": "logging.FileHandler",
          "level": "DEBUG",
          "filters": [],
          "formatter": "logformat_detailed",
          "filename":"logfile.log",
          "mode": "a",
          "encoding": "utf-8"
      }
  },
  "loggers": {
      "": {
          "handlers": ["stderr"],
          "level": "WARNING",
          "filters": [],
          "propagate": "False"
      },
      "__main__": {
          "handlers": ["stderr", "console", "file"],
          "level": "DEBUG",
          "filters": [],
          "propagate": "False"
      },
      "sim_world.envs.car_0.ev3_sim_car.SimCar": {
        "handlers": ["stderr", "console", "file"],
        "level": "DEBUG",
        "filters": [],
        "propagate": "False"
      },
      "sim_world.envs.pygame_0.ev3_sim_pygame_2d_V2.PyGame2D": {
        "handlers": ["stderr", "console", "file"],
        "level": "DEBUG",
        "filters": [],
        "propagate": "False"
      },
      "sim_world.envs.simulation_env.CustomEnv": {
        "handlers": ["stderr", "console", "file"],
        "level": "DEBUG",
        "filters": [],
        "propagate": "False"
      }
  },
  "root": {
    "handlers": ["stderr"],
    "level": "WARNING",
    "filters": [],
    "propagate": "False"
  }
}